<div class="col-md-4 col-sm-4" style="margin-top: 20px;">
           <% @smalls.each do |post| %>
               <article class="col-md-12 col-sm-12 small col">
               <%= image_tag post.image.small %>
               <div class="info">
                 <p class="tags">
                   <%= raw post.tag_list.map{|t| link_to t, root_path(t)}.join(', ') %>
                 </p>
                 <h1><%= link_to truncate(post.title, length: 56), post_path(post) %></h1>
                 <p class="details"> 
                         <% if post.created_at > Time.now.beginning_of_day %>
                             <%="#{time_ago_in_words(post.created_at)} ago"%> 
                          <% else %> 
                          <%= post.created_at.strftime("%b %d, %Y") %>
                          <% end %> | <a href="author.html">Alex Grosville</a></p>
                 <p class="text">
                   Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
                 </p>

               </div>
               <ul class="counters list-inline">
                 <li>
                   <a href=""><i class="fa fa-eye"></i>1241</a>
                 </li>
                 <li>
                   <a href=""><i class="fa fa-comment"></i>25</a>
                 </li>
                 <li>
                   <a href=""><i class="fa fa-heart"></i>724</a>
                 </li>
               </ul>
               </article>
           <% end %>
         </div>